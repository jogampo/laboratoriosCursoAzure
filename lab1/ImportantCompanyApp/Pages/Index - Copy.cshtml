@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    .message {
        width: 50%
    }
</style>

<div class="text-center">
    <h1 class="display-4">Important Company App Messaging Tool</h1>
    <br /><br /><br />
    <form method="post" action="">
        Message: <input type="text" class="message" id="message" name="message" value="Something really important." /><br />
        <input type="submit" value="Write Message" />
    </form>
    @Model.WriteMessage
    <br /><br /><br />
    <hr />
    <br /><br /><br />
    <a asp-page="Index" asp-page-handler="GoReadMessage">

        Read Message

    </a>

</div>
